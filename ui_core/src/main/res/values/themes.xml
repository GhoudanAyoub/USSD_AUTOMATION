<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheMovieDbAssessment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/content_white</item>
        <item name="colorPrimaryDark">@color/content_dark</item>
        <item name="colorAccent">@color/content_dark</item>
        <item name="drawerArrowStyle">@style/customNavigationBackIcon</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/content_ultraLightGrey</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="buttonStyle">@style/Widget.Chari.Button</item>
        <item name="android:windowBackground">@color/content_white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ProductRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="customNavigationBackIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/brand_primary</item>
        <item name="srcCompat">@drawable/ic_arrow_back</item>
    </style>

    <style name="Widget.Chari.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlNormal">@color/brand_hover</item>
        <item name="android:textColorPrimary">@color/content_white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlNormal">@color/brand_hover</item>
        <item name="android:textColorPrimary">@color/content_white</item>
    </style>

    <style name="NavigationViewItemStyle" parent="Theme.TheMovieDbAssessment">
        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/brand_primary</item>
        <item name="closeIcon">@drawable/ic_close_icon</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHint">@color/content_darkGrey</item>
    </style>

    <style name="MainNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@color/content_white</item>
        <item name="android:textSize">11sp</item>
        <item name="lineHeight">16dp</item>
    </style>

</resources>
